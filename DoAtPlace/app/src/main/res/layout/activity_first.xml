<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TabHost
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/tab1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">



                            <Button
                                android:text="동네예보"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/RefreshBtn"
                                android:layout_weight="1"
                                android:background="#B0F1C2"
                                android:textSize="16dp"
                                android:textColor="#FFFFFF"
                                android:gravity="center" />

                            <TextView
                                android:text="야!비온대"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/IsStoryUserTxt"
                                android:layout_weight="1"
                                android:background="#F1B0B0"
                                android:textSize="16dp"
                                android:textColor="#FFFFFF"
                                android:gravity="center"/>





                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tab2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="#FFD4D4">

                            <Button
                                android:text="ForTalk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ForTalkBtn"
                                android:background="#A46868"
                                android:textSize="16dp"
                                android:textColor="#FFFFFF"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tab3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <EditText
                                android:gravity="center"
                                android:background="#F1B0B0"
                                android:textColor="#FFFFFF"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:inputType="textPersonName"
                                android:ems="10"
                                android:id="@+id/PNameTxt"
                                android:textSize="16dp"
                                android:layout_weight="1" />

                            <TextView
                                android:gravity="center"
                                android:background="#D68684"
                                android:textColor="#FFFFFF"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/UniqueNTxt"
                                android:textSize="16dp"
                                android:layout_weight="1" />

                            <Button
                                android:text="로그아웃"
                                android:textSize="16dp"
                                android:background="#735360"
                                android:textColor="#FFFFFF"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/LogoutBtn"
                                android:layout_weight="1" />

                            <Button
                                android:text="회원탈퇴"
                                android:textSize="16dp"
                                android:background="#3E3947"
                                android:textColor="#FFFFFF"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/DeleteBtn"
                                android:layout_weight="1" />


                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </TabHost>
        </LinearLayout>




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
